<h1><%= @recipe.name %></h1>

<h2>Description: <%=@recipe.description%></h2>
<h2>Cook Time: <%= @recipe.time  %> minutes</h2>

<p>Ingredients: <% @recipe.quantities.each do |quant| %> </p>
         <p><%= quant.amount %> x <%= quant.ingredient.name %> </p>
<% end %> 
<p>Instructions: <%=@recipe.instructions%></p>

<div>
 <div class="recipes">
  
      <% if current_user.id == @recipe.user.id %>
      <ul class="recipe-actions">
        <li><%= link_to "Edit", edit_user_recipe_path(current_user, @recipe) %></li>
        <%= form_tag recipe_path(@recipe), method: "delete" do %>
    <%= submit_tag "Delete #{@recipe.name}", :class => 'btn btn-danger' %>
  <% end %>
      </ul>
      <%end%>
    </div>
</div>

